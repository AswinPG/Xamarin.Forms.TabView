<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TabView.Sample.Views.MainView"
    Title="TabView Gallery">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout
                Padding="12">
                <Label
                    Text="TabView"
                    FontSize="Large"/>
                <Button
                    x:Name="BasicTabsBtn"
                    Text="Basic Tabs Gallery (XAML)"
                    Clicked="OnBasicTabsBtnClicked"/>
                <Button
                    x:Name="BasicCSharpTabsBtn"
                    Text="Basic Tabs Gallery (C#)"
                    Clicked="OnBasicCSharpTabsBtnClicked"/>
                <Button
                    x:Name="OnlyTextTabsBtn"
                    Text="Only Text Tabs Gallery"
                    Clicked="OnlyTextTabsBtnClicked"/>
                <Button
                    x:Name="CustomTabsBtn"
                    Text="Custom Tabs Gallery"
                    Clicked="OnCustomTabsBtnClicked"/>
                <Button
                    x:Name="TabViewItemAnimationBtn"
                    Text="TabViewItemAnimation Gallery"
                    Clicked="OnTabViewItemAnimationBtnClicked"/>
                <Button
                    x:Name="TabItemsSourceBtn"
                    Text="TabItemsSource Gallery"
                    Clicked="OnTabItemsSourceBtnClicked"/>
                <Button
                    x:Name="SegmentControlBtn"
                    Text="Segment Tabs Gallery"
                    Clicked="OnSegmentControlBtnClicked"/>
                <Button
                    x:Name="FabTabBtn"
                    Text="FAB Tab Gallery"
                    Clicked="OnFabTabBtnClicked"/>
                <Button
                    x:Name="TabWidthBtn"
                    Text="TabWidth Gallery"
                    Clicked="OnTabWidthBtnClicked"/>
                <Button
                    x:Name="IsTabStripVisibleBtn"
                    Text="IsTabStripVisible Gallery"
                    Clicked="OnIsTabStripVisibleBtnClicked"/>
                <Button
                    x:Name="NestedTabsBtn"
                    Text="Nested Tabs Gallery"
                    Clicked="OnNestedTabsBtnClicked"/>
                <Button
                    x:Name="ScrollTabsBtn"
                    Text="Scroll Tabs Gallery"
                    Clicked="OnScrollTabsBtnClicked"/>
                <Button
                    x:Name="TabEventsBtn"
                    Text="Tab Events Gallery"
                    Clicked="OnTabEventsBtnClicked"/>
                <Button
                    x:Name="TabPlacementBtn"
                    Text="TabPlacement Gallery"
                    Clicked="OnTabPlacementBtnClicked"/>
                <!-- WORK IN PROGRESS-->
                <Button
                    x:Name="TabFlowDirectionBtn"
                    IsVisible="False"
                    Text="Tab FlowDirection Gallery"
                    Clicked="OnTabFlowDirectionBtnClicked"/>
                <Button
                    x:Name="NoContentBtn"
                    Text="No Content Gallery"
                    Clicked="OnNoContentBtnClicked"/>
                <Button
                    x:Name="TabBadgeBtn"
                    Text="Tab Badge Gallery"
                    Clicked="OnTabBadgeBtnClicked"/>
                <Button
                    x:Name="TabIndicatorViewBtn"
                    Text="Custom Indicator Gallery"
                    Clicked="OnTabIndicatorViewBtnClicked"/>
                <Button
                    x:Name="TabStripBackgroundViewBtn"
                    Text="Animated TabStrip Gallery"
                    Clicked="OnTabStripBackgroundViewBtnClicked" />
                <Button
                    x:Name="PerfBtn"
                    Text="Performance Test Gallery"
                    Clicked="OnPerfBtnClicked" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
